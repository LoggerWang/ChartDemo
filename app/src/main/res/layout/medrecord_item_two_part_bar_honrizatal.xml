<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/dp34"
              android:id="@+id/llBarItemView"
              android:layout_marginTop="@dimen/dp16"
              android:gravity="center_vertical"
              android:orientation="horizontal" tools:ignore="ResourceName">
    <TextView
            android:id="@+id/tvBarName"
            android:layout_width="@dimen/dp50"
            android:layout_height="wrap_content"
            tools:text="神经损伤asdfasdfasdfa"
            android:ellipsize="end"
            android:textColor="@color/color_333333"
            android:maxLines="2"
            android:maxWidth="@dimen/dp50"
            android:textSize="@dimen/font_12"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
    android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/rlBarLeft"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="#FE9494">
                <TextView
                        android:id="@+id/tvBarNumLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/dp4"
                        android:layout_centerVertical="true"
                        android:textStyle="italic|bold"
                        android:textSize="@dimen/font_12"
                        tools:text="100"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/rlBaright"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_92E9AC">
                <TextView
                        android:id="@+id/tvBarNumRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginEnd="@dimen/dp4"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_14"
                        android:textStyle="italic|bold"
                        tools:text="100"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
